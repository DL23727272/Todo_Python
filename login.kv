MDScreen:
    md_bg_color: [255/255, 255/255, 204/255, 1]

    MDCard:
        size_hint: None, None
        size: 320, 500
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        elevation: 3
        padding: 20
        spacing: 30
        orientation: 'vertical'

        MDLabel:
            text: 'Login'
            font_style: 'Button'
            font_size: 45
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDLabel:
            id: error_label
            text: ''
            font_style: 'Button'
            font_size: 15
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]

        BoxLayout:
            orientation: 'horizontal'
            spacing: dp(8)
            size_hint_y: None
            height: self.minimum_height  

            MDIcon:
                icon: 'account'
                theme_text_color: 'Custom'
                text_color: 0, 0, 0, 1
                pos_hint: {'center_y': 0.5}

            MDTextField:
                id: username_input
                hint_text: "Username"
                size_hint_x: None
                width: 220
                height: self.minimum_height  
                font_size: 15
                pos_hint: {'center_x': 0.5}
                color_active: [1, 1, 1, 1]
                padding: [10, 10, 0, 10] 
                

        BoxLayout:
            orientation: 'horizontal'
            spacing: dp(8)
            size_hint_y: None
            height: self.minimum_height  

            MDIcon:
                icon: 'eye-off'
                theme_text_color: 'Custom'
                text_color: 0, 0, 0, 1
                pos_hint: {'center_y': 0.5}

            MDTextField:
                id: password_input
                hint_text: "Password"
                size_hint_x: None
                width: 220
                height: self.minimum_height 
                font_size: 15
                pos_hint: {'center_x': 0.5}
                color_active: [1, 1, 1, 1]
                password: True
                padding: [10, 10, 0, 10]  

        MDRoundFlatButton:
            text: "LOGIN"
            pos_hint: {"center_x": .5}
            font_size: 15
            on_press: app.login()
            

        Widget:
            size_hint_y: None
            height: 30
